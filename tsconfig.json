{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es5",
        "declaration": true,
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types", "types"],
        "paths": {
            "@/*": ["./*"],
            "api/*": ["api/*"],
            "components/*": ["components/*"],
            "plugins/*": ["plugins/*"],
            "config/*": ["config/*"],
            "constants/*": ["constants/*"],
            "hooks/*": ["hooks/*"],
            "layout/*": ["layout/*"],
            "theme/*": ["theme/*"],
            "utils/*": ["utils/*"],
            "assets/*": ["assets/*"],
            "css/*": ["css/*"],
            "lib/*": ["lib/*"]
        }
    },
    "include": ["components", "global.d.ts"],
    "exclude": ["node_modules"]
}